@model IEnumerable<backend.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category Index</h1>

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Create New</a>
        </div>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                            <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.CategoryId"><i class="bi bi-info-circle"></i> Details</a>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategoryId"><i class="bi bi-pencil"></i> Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
