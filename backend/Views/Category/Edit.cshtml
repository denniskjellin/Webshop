@model backend.Models.Category

@{
ViewData["Title"] = "Edit Category";
}

<h1>@ViewData["Title"]</h1>
<div class="card mt-4">
    <div class="card-body">
        <h4 class="card-title">Category - @Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Set name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save icon-margin"></i>Save Changes</button>
                </div>
                <div class="col-sm-6 text-right">
                    <a asp-action="Index" asp-route-id="@Model?.CategoryId" class="btn btn-secondary"><i class="bi bi-arrow-left icon-margin"></i>Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}