@model backend.Models.Category

@{
ViewData["Title"] = "Delete Category";
}

@* 
Creating card to display the data and the form.
Using Bootstrap 5 for the card and the form elements with buttons + the library Bootstrap Icons.
*@

<h1>@ViewData["Title"]</h1>
<div class="card mt-4">
    <div class="card-body">
        <h4 class="card-title">Category - @Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Category name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
        </dl>
        <hr />
        <form asp-action="Delete" asp-route-id="@Model.CategoryId" method="post" onsubmit="return confirm('Are you sure you want to delete this category? This action is irreversible!');">
            <input type="hidden" asp-for="CategoryId" />
            <button type="submit" class="btn btn-danger mr-2"><i class="bi bi-trash3 icon-margin"></i>Delete</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-backspace icon-margin"></i>Back to List</a>
        </form>
    </div>
</div> 