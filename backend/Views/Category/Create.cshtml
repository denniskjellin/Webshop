@model backend.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

@* 
Creating card to display the data and the form to create a new category.
Using Bootstrap 5 for the card and the form elements with buttons + the library Bootstrap Icons.
*@

<h1>@ViewData["Title"]</h1>
<div class="card mt-4">
    <div class="card-body">
          <h4 class="card-title">New</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="form-label">Category name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary mt-3"><i class="bi bi-save icon-margin"></i>Create</button>
                <a asp-action="Index" class="btn btn-secondary mt-3"><i class="bi bi-backspace icon-margin"></i>Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
